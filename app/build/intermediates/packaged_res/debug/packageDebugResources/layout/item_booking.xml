<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/textVenueName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Helyszín neve"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textBookingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dátum"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textVenueName"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/textBookingStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Státusz"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textBookingDate"
        android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
